<%- include('./partials/_header.ejs') %> 
<%- include('./partials/_navbar.ejs') %>

<div class="container">
        <% errors.forEach(error => { %>
                <div class="alert alert-danger mt-3">
                          <p><%= error %></p>
                </div>
            
            <% }) %>
              <% success.forEach(succes => { %>
                <div class="alert alert-success mt-3">
                          <p><%= succes %></p>
                </div>
            
            <% }) %>
            
          <h2 class="mt-3">Bem-vindo!</h2>
          <p>Seja bem-vindo ao meu blog!</p>
          <hr>
  <% allArticles.forEach(articles => { %>

          <div class="card mt-4">
                    <div class="card-header">
                              <h4><%- articles.dataValues.title %></h4>
                    </div>

                    <div class="card-body">
                              <a href="/<%- articles.dataValues.slug %>" class="btn btn-success">Ler artigo</a>
                    </div>
          </div>
   
  <% }) %>


<div class="row">
        <div class="col-md-12 mt-4 d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                        <ul class="pagination">
                          <li class="page-item disabled"><a class="page-link text-black" href="#">Previous</a></li>
                          <li class="page-item"><a class="page-link text-black" href="/articles/page/2">Next</a></li>
                        </ul>
                </nav>
        </div>
</div>
</div>

<%- include('./partials/_tinyMCE.ejs') %>

<%- include('./partials/_foot.ejs') %>