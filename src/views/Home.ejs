<%- include('./partials/_header.ejs') %> 
<%- include('./partials/_navbar.ejs') %>

<div class="container">
          <h2 class="mt-3">Bem-vindo!</h2>
          <p>Seja bem-vindo ao meu blog!</p>
          <hr>
  <% allArticles.forEach(articles => { %>

          <div class="card mt-4">
                    <div class="card-header">
                              <h4><%- articles.dataValues.title %></h4>
                    </div>

                    <div class="card-body">
                              <a href="/<%- articles.dataValues.slug %>" class="btn btn-success">Ler artigo</a>
                    </div>
          </div>
   
  <% }) %>
</div>

