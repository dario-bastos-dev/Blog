<%- include('./partials/_header.ejs') %> 
<%- include('./partials/_navbar.ejs') %>

<div class="container">
          <% errors.forEach(error => { %>
                    <div class="alert alert-danger">
                              <p><%= error %></p>
                    </div>
           
          <% }) %>

          <hr>
          <div class="card mt-5">
                    <div class="card-header">
                              <h2>Criação de usuário</h2>
                    </div>

                    <div class="card-body">
                              <form action="/user/create" method="post">

                                        <label for="name">Nome de usuário</label>
                                        <input type="text" name="name" class="form-control" placeholder="Example Name">

                                        <label for="email" class="mt-4">E-mail</label>
                                        <input type="email" name="email" class="form-control" placeholder="exemplo@gmail.com">

                                        <label for="password" class="mt-4">Senha</label>
                                        <input type="text" name="password" class="form-control" placeholder="Digite sua senha">

                                        <button type="submit" class="btn btn-success btn-block mt-4">Criar usuário</button>

                              </form>

                    </div>
          </div>
</div>

