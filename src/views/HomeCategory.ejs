<%- include('./partials/_header.ejs') %> 
<%- include('./partials/_navbar.ejs') %>

<div class="container">
          <h2 class="mt-3">Bem-vindo!</h2>
          <p>Seja bem-vindo ao meu blog!</p>
          <hr>
  <% categories.dataValues.articles.forEach(article => { %>

          <div class="card mt-4">
                    <div class="card-header">
                              <h4><%= article.dataValues.title %></h4>
                    </div>

                    <div class="card-body">
                              <a href="/<%= article.dataValues.slug %>" class="btn btn-success">Ler artigo</a>
                    </div>
          </div>
   
  <% }) %>
</div>

